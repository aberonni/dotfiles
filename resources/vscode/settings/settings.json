{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.promptToSaveFilesBeforeCommit": "always",
  "search.globalFindClipboard": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "terminal.integrated.scrollback": 10000,
  "workbench.colorCustomizations": {
    "activityBarBadge.background": "#3F9E4D",
    "statusBar.background": "#3F9E4D",
    "focusBorder": "#3F9E4D",
    // following color scheme is copied from
    // https://github.com/nathanbuchar/atom-one-dark-terminal/blob/master/COLORS
    "terminal.ansiBlack": "#1E2127",
    "terminal.ansiBrightBlack": "#5C6370",
    "terminal.ansiRed": "#E06C75",
    "terminal.ansiBrightRed": "#E06C75",
    "terminal.ansiGreen": "#98C379",
    "terminal.ansiBrightGreen": "#98C379",
    "terminal.ansiYellow": "#D19A66",
    "terminal.ansiBrightYellow": "#D19A66",
    "terminal.ansiBlue": "#61AFEF",
    "terminal.ansiBrightBlue": "#61AFEF",
    "terminal.ansiMagenta": "#C678DD",
    "terminal.ansiBrightMagenta": "#C678DD",
    "terminal.ansiCyan": "#56B6C2",
    "terminal.ansiBrightCyan": "#56B6C2",
    "terminal.ansiWhite": "#ABB2BF",
    "terminal.ansiBrightWhite": "#FFFFFF",
    "terminal.foreground": "#ABB2BF",
    "terminal.background": "#1E1E1E"
  },
  "terminal.integrated.fontWeight": "500",
  "workbench.fontAliasing": "auto",
  "workbench.startupEditor": "none",
  "git.autofetch": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.fontFamily": "MesloLGS NF, Comic Sans MS, Menlo, Monaco, 'Courier New', monospace",
  "files.associations": {
    "*.md": "markdown",
    "*.comp": "mason",
    ".env*": "dotenv"
  },
  "breadcrumbs.enabled": true,
  "editor.tabSize": 2,
  "prettier.arrowParens": "avoid",
  "typescript.updateImportsOnFileMove.enabled": "prompt",
  "workbench.editor.decorations.colors": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "eslint.format.enable": true,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "security.promptForLocalFileProtocolHandling": false,
  "html.autoClosingTags": false,
  "window.zoomLevel": 1,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "prettier.requireConfig": true,
  "editor.formatOnType": true,
  "redhat.telemetry.enabled": false,
  "playwright.reuseBrowser": false,
  "workbench.colorTheme": "Default Dark+",
  "workbench.activityBar.location": "top",
  "prettier.prettierPath": "./node_modules/prettier",
  "eslint.ignoreUntitled": true,
  "eslint.useFlatConfig": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "liveshare.launcherClient": "visualStudioCode",
  "liveshare.populateGitCoAuthors": "never",
  "diffEditor.ignoreTrimWhitespace": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "window.openFoldersInNewWindow": "on",
  "extensions.ignoreRecommendations": true,
  "git.blame.statusBarItem.enabled": true,
  "orta.vscode-twoslash-queries.maxLength": 600,
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": [
      {
        "name": "envKeys",
        "scope": "string.quoted.single.ini,constant.numeric.ini,string.quoted.double.ini",
        "settings": {
          "foreground": "#19354900"
        }
      },
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "dotenv.enableAutocloaking": true
}
